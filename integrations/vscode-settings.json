{
  "// ContextKit - Context Engineering for AI Development": "GitHub Copilot and other VS Code AI tools will use these settings",
  
  "copilot.suggestions.enabled": true,
  "copilot.editor.enableAutoCompletions": true,
  
  "// Project Standards": "Reference in your prompts to use ContextKit standards",
  "vibeKit.standardsPath": ".contextkit/standards",
  "vibeKit.templatesPath": ".contextkit/templates",
  "vibeKit.commandsPath": ".contextkit/commands",
  
  "// Quick Usage in Copilot Chat": "Simply mention @.contextkit in your prompts",
  "// Examples": [
  "// @.contextkit Create a login button",
  "// @.contextkit/standards Create a component (standards only)",
  "// @.contextkit/standards/code-style.md For specific files"
  ],
  
  "// AI Guidelines": "Use these in your prompts with Copilot",
  "ai.guidelines": [
    "Follow: .contextkit/standards/code-style.md",
    "Testing: .contextkit/standards/testing.md",
    "Architecture: .contextkit/standards/architecture.md",
    "Guidelines: .contextkit/standards/ai-guidelines.md"
  ]
}
